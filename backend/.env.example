# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pharma_dashboard
DB_USER=postgres
DB_PASSWORD=root

# JWT Configuration
# IMPORTANTE: Gere um secret forte com: node scripts/generate-secret.js
# Nunca use o valor abaixo em produção! Ele é apenas um exemplo.
# O secret deve ter no mínimo 256 bits (64 caracteres hexadecimais)
JWT_SECRET=SUBSTITUA_POR_UM_SECRET_FORTE_GERADO_COM_O_SCRIPT
JWT_EXPIRES_IN=15m
REFRESH_SECRET=SUBSTITUA_POR_UM_REFRESH_SECRET_FORTE
REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100